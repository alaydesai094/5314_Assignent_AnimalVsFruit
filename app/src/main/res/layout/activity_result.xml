<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">



    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Memorize This !!"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@id/title"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        tools:text="Hello User" />

    <TextView
        android:id="@+id/player2show"
        android:layout_width="137dp"
        android:layout_height="67dp"
        android:layout_below="@id/txt4"
        android:layout_marginStart="82dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/player1show"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        tools:text="Player2" />

    <TextView
        android:id="@+id/player1show"
        android:layout_width="165dp"
        android:layout_height="87dp"
        android:layout_below="@id/txt4"
        android:layout_marginTop="26dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        tools:text="Player 1" />


    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player1show"
        android:layout_marginTop="83dp"
        android:onClick="checkButtonPressed"
        android:text="Check"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_check"
        android:layout_marginTop="44dp"
        android:onClick="resultButtonPressed"
        android:text="Show Result"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_result"
        android:layout_marginTop="44dp"
        android:onClick="backButtonPressed"
        android:text="restart"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />


</RelativeLayout>